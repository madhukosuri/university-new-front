  <body>
    <div class="container">
    <%if signed_in? %>
    <ul class="nav nav-pills">
  <li class="active"><%=link_to 'Students', students_path%></li>
  <li><%=link_to 'Teachers', teachers_path%></li>
  <li class="dropdown">
    <%= link_to students_path, :class => "dropdown-toggle", :data => {:toggle=>"dropdown"} do %>Profile <b class="caret"></b>
      <% end %>
   
    <ul class="dropdown-menu">
      <li><%=link_to :logout, destroy_user_session_path%></li>
      <li><%=link_to "Update Profile", edit_student_path(current_user.id), :remote => true%></li>
    </ul>
  </li>
  </ul>
    
    <%end%>
